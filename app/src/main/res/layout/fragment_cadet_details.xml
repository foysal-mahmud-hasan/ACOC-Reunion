<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cadetDetailsViewModel"
            type="com.wst.acocscanner.cadetDetails.CadetDetailsViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_animation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"
            android:visibility="gone"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contentLayout">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                app:layout_constraintTop_toTopOf="@+id/linearLayout5"
                tools:context=".cadetDetails.CadetDetailsFragment">


                <TextView
                    android:id="@+id/title_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="80dp"
                    android:gravity="center"
                    android:text="Cadet Details"
                    android:textColor="@color/textAsh"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_5">

                    <TextView
                        android:id="@+id/cadetDetails_TitleName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".47"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="Cadet Name"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="45dp"
                        tools:layout_editor_absoluteY="174dp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text=":"
                        android:textColor="@color/textAsh"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cadetDetails_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="Foysal Mahmud Hasan"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="167dp"
                        tools:layout_editor_absoluteY="174dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                    <TextView
                        android:id="@+id/cadetDetails_TitleCadetNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".47"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="Cadet No."
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="45dp"
                        tools:layout_editor_absoluteY="174dp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text=":"
                        android:textColor="@color/textAsh"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cadetDetails_CadetNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="10000001"
                        android:textStyle="bold"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="167dp"
                        tools:layout_editor_absoluteY="174dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <TextView
                        android:id="@+id/cadetDetails_TitleCadetIntake"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".47"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="Intake "
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="45dp"
                        tools:layout_editor_absoluteY="174dp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text=":"
                        android:textColor="@color/textAsh"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cadetDetails_CadetIntake"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="2010"
                        android:textStyle="bold"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="167dp"
                        tools:layout_editor_absoluteY="174dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                    <TextView
                        android:id="@+id/cadetDetails_TitleShirtSize"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight=".47"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="T-Shirt Size"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="45dp"
                        tools:layout_editor_absoluteY="174dp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text=":"
                        android:textColor="@color/textAsh"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cadetDetails_ShirtSize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="Large"
                        android:textStyle="bold"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="167dp"
                        tools:layout_editor_absoluteY="174dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                    <TextView
                        android:id="@+id/cadetDetails_TitleGuest"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight=".47"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="Guests"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="45dp"
                        tools:layout_editor_absoluteY="170dp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text=":"
                        android:textColor="@color/textAsh"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cadetDetails_Guest"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="100"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="167dp"
                        tools:layout_editor_absoluteY="170dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                    <TextView
                        android:id="@+id/cadetDetails_TitleAccommodation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".47"
                        android:gravity="left|center"
                        android:paddingStart="2dp"
                        android:text="Accommodation"
                        android:textColor="@color/textAsh"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="45dp"
                        tools:layout_editor_absoluteY="174dp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text=":"
                        android:textColor="@color/textAsh"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cadetDetails_Six"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:text="ACOC / SELF"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="167dp"
                        tools:layout_editor_absoluteY="174dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="70dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/cadetDetails_back_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".47"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="Parking Number"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="45dp"
                        tools:layout_editor_absoluteY="174dp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text=":"
                        android:textColor="@color/textAsh"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cadetDetails_ParkingNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="Parking Numbers = 101 , 102, 103, 104, 105"
                        android:textColor="@color/textAsh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="167dp"
                        tools:layout_editor_absoluteY="174dp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cadetDetails_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/custom_button"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:onClick="@{() -> cadetDetailsViewModel.backButtonPressed()}"
                    android:text="Back"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cadetDetails_back_btn" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </FrameLayout>

</layout>